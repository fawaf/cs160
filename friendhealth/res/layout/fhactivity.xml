<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fh_background"
    android:orientation="vertical"
    android:scaleType="fitXY" >

    <TextView
        android:id="@+id/txt_ActTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Replace with Activity Title!"
        android:textSize="22pt" />

    <Button
        android:id="@+id/btn_ActHelp"
        android:layout_width="110dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Help" />

    <Button
        android:id="@+id/btn_ActInvite"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/btn_ActHelp"
        android:layout_centerHorizontal="true"
        android:text="Invite Others to Activity" />

    <Button
        android:id="@+id/btn_ActReject"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/btn_ActHelp"
        android:layout_alignBottom="@+id/btn_ActHelp"
        android:layout_alignParentBottom="true"
        android:text="Reject Activity" />

    <Button
        android:id="@+id/btn_ActTakePicture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_ActHelp"
        android:layout_alignParentLeft="true"
        android:text="Take Picture" />

    <ImageView
        android:id="@+id/img_fhAct"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY" />

    <Gallery
        android:id="@+id/activityGallery"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/btn_ActHelp" />

    <TextView
        android:id="@+id/txt_ActPt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_ActTitle"
        android:layout_centerHorizontal="true"
        android:text="Replace with points!"
        android:textColor="#7fff00"
        android:textSize="22pt" />

</RelativeLayout>