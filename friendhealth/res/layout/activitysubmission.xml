<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/new_bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/img_submit"
        android:layout_width="240dp"
        android:layout_height="280dp"
        android:scaleType="fitXY" android:layout_gravity="center_horizontal" android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/edt_Caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="50dp"
        android:layout_weight="0.27"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/btn_Submit"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/facebook_icon2"
        android:text="@string/btn_submit" android:textSize="35dp" android:textColor="#0101ef" android:layout_gravity="center_horizontal" android:layout_marginBottom="15dp"/>

</LinearLayout>
