<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/new_bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/img_submit"
        android:layout_width="240dp"
        android:layout_height="280dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:scaleType="fitXY" />
    
    <Button
        android:id="@+id/btn_Submit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_Caption"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/facebook_icon2"
        android:text="@string/btn_submit"
        android:textColor="#0101ef"
        android:textSize="27dp" />

    <EditText
        android:id="@+id/edt_Caption"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/img_submit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_weight="0.27"
        android:inputType="textMultiLine" android:layout_marginRight="50dp" android:layout_marginLeft="50dp"/>

    <Button
        android:id="@+id/btn_Rotate"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="270dp"
        android:layout_toRightOf="@+id/btn_Submit"
        android:drawableTop="@drawable/rotate"
        android:text="Rotate" />

</RelativeLayout>
