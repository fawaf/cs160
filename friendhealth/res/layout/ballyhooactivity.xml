<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom|top"
    android:orientation="vertical" >
    
     <Button
             android:id="@+id/btn_Invite"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_alignParentBottom="true"
             android:layout_alignParentLeft="true"
             android:text="@string/invite" />


     <EditText
         android:id="@+id/edt_Message"
         android:layout_width="match_parent"
         android:layout_height="165dp"
         android:layout_alignParentLeft="true"
         android:layout_centerVertical="true"
         android:layout_marginBottom="55dp"
         android:inputType="textMultiLine" android:layout_marginLeft="30dp" android:layout_marginRight="30dp"/>

     <TextView
         android:id="@+id/txt_ActivityName"
         android:layout_width="wrap_content"
         android:layout_height="62dp"
         android:layout_above="@+id/editText1"
         android:layout_alignParentLeft="true"
         android:layout_alignParentRight="true"
         android:layout_alignParentTop="true"
         android:text="Task Name Place Holder"
         android:textAppearance="?android:attr/textAppearanceLarge" />


     <TextView
         android:id="@+id/txt_TellFriends"
         android:layout_width="wrap_content"
         android:layout_height="55dp"
         android:layout_alignParentLeft="true"
         android:layout_below="@id/txt_ActivityName"
         android:layout_marginTop="29dp"
         android:text="Tell your friends that you are going to perform this task."
         android:textAppearance="?android:attr/textAppearanceMedium" android:layout_marginLeft="30dp" android:layout_marginRight="30dp"/>

</RelativeLayout>